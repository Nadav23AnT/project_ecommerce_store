{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@controllers/*": ["controllers/*"],
      "@middelware/*": ["middelware/*"],
      "@models/*": ["models/*"],
      "@public/*": ["public/*"],
      "@routes/*": ["routes/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [".", ".eslintrc.cjs"],
  "exclude": ["node_modules", "build"]
}
